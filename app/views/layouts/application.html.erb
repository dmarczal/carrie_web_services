<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
  <%= stylesheet_link_tag 'web_app_theme' %>
  <%= javascript_include_tag "application" %>
  <%= mathjax_tag %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1> <%= link_to "Simuladores MatemÃ¡ticos", root_url %> </h1>
      <%= render 'shared/current_logged' %>
      <%= render 'shared/navigation' %>
    </div>
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>Projeto de software educacional livre da <a href="http://www.c3sl.ufpr.br">UFPR</a></p>
            <p>Copyright &copy; <%= Time.now.year %> Web App.</p>
          </div>
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
        <%= render :partial => 'shared/right_sidebar' %>
      </div>
    </div>
  </div>
</body>
</html>
