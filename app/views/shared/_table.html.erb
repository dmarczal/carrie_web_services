<div class="block" id="block-tables">
<div class="content">
  <h2 class="title"><%= table_title %></h2>
  <div class="inner">

    <table class = "table" >
      <tr>
        <th> Id </th>
        <th> Exercício </th>
        <th> Célula </th>
        <th> Resposta </th>
        <th> Resposta Correta </th>
        <th> Data e Hora </th>
        <th> Aluno </th>
        <th> Gravatar </th>
      </tr>
      <% answers.each do |answer| -%>
        <tr class = "<%= cycle('even', 'odd') %>" >
          <td> <%= answer.id %> </td>
          <td> <%= answer.exercise %> </td>
          <td> <%= answer.cell %> </td>
          <td> <%= math(answer.answer) %> </td>
          <td> <%= math(answer.correct_answer) %> </td>
          <td> <%= l(answer.created_at, :format => :small) %> </td>
          <td> <%= answer.user.email %> </td>
          <td> <%= gravatar_image_tag(answer.user.email, :alt => answer.user.email, :gravatar => {:size => 25} ) %> </td>
        </tr>
      <%-end -%>
    </table>

    <div class="actions-bar wat-cf">
      <div clas="page_info">
        <%= page_entries_info(@search.hits, :model => model ) if @search %>
      </div>
      <%= will_paginate(@search.hits) if @search %>
    </div>

  </div>
</div>
</div>
